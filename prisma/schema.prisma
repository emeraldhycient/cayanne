generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Otp {
  id         String   @id @default(cuid())
  type       String
  value      String
  createdAt  DateTime @default(now())
  expiresAt  DateTime
  used       Boolean  @default(false)
  clientId   String?
  // userId     String?
  // user       User?    @relation(fields: [userId], references: [id])
}